# Client (Vite) - required for the app to start
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Maps / Places (maps, geocoding, Drive Picker)
# Client key for map loader and autocomplete. In prod prefer server proxy.
VITE_GOOGLE_MAPS_API_KEY=your_browser_maps_key
# Server key used by API routes (directions, static maps) and dev proxy.
GOOGLE_MAPS_API_KEY=your_server_maps_key

# Google Calendar & Drive Picker (calendar sync, Drive import)
VITE_GOOGLE_CALENDAR_CLIENT_ID=your_google_oauth_client_id
VITE_GOOGLE_PICKER_API_KEY=your_google_picker_key_optional
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key

# AI backends (server-side only; never exposed in client bundle)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemini-2.0-flash-001
OPENROUTER_HTTP_REFERER=http://localhost:5173
OPENROUTER_TITLE=Fahrtenbuch Pro

# Rate limiter (Upstash/Redis REST)
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Admin / security
ADMIN_SECRET=
# Optional: encryption key for stored API keys (32 bytes hex)
API_KEY_ENCRYPTION_SECRET=

# Monitoring (Sentry)
VITE_SENTRY_DSN=
VITE_SENTRY_ENV=production

# Checkout URLs (Stripe)
VITE_STRIPE_CHECKOUT_PRO=
VITE_STRIPE_CHECKOUT_ENTERPRISE=

# Feature flags
VITE_ENABLE_EXTRACTOR_UI=false

# Logging (set to true to allow verbose logs even in production)
VERBOSE_LOGS=false
VITE_VERBOSE_LOGS=false

# Runtime / build metadata (optional; hosting usually injects)
PORT=3000
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=
GITHUB_SHA=
