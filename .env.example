# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Maps API (REQUIRED for distance calculation and maps)
# Client-side API Key for maps display and geocoding
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# Server-side API Key for distance calculation and directions
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Calendar Integration (Optional - for calendar sync)
# Client-side OAuth Client ID for authentication
VITE_GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id_here
# Server-side API Key for calendar operations
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key_here

# Server-only AI credentials (NOT exposed to the client bundle)
# These are read by the serverless API routes under /api/ai/*
# Rate limiting: AI endpoints are limited to 10 requests per minute per user
GEMINI_API_KEY=your_gemini_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# API Key Encryption (REQUIRED for security)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY_ENCRYPTION_SECRET=your_64_character_hex_string_here

# Admin Operations (Optional - for running migrations and admin tasks)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SECRET=your_admin_secret_here
# Optional defaults for OpenRouter requests (can be overridden per user)
OPENROUTER_MODEL=google/gemini-2.0-flash-001
# Optional branding headers for OpenRouter usage analytics
OPENROUTER_HTTP_REFERER=http://localhost:5173
OPENROUTER_TITLE=Fahrtenbuch Pro

# UI feature flags (client-side)
# Show the AI extractor card inside Settings > API (default: hidden)
VITE_ENABLE_EXTRACTOR_UI=false
